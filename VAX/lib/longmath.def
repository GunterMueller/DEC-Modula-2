(* This defines an interface to the C math library. *)

DEFINITION MODULE longmath;

PROCEDURE @EXTERNAL sin   (x    : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL cos   (x    : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL atan  (x    : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL atan2 (x, y : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL exp   (x    : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL sqrt  (x    : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL log   (x    : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL ldexp (x    : LONGREAL; exp : INTEGER) : LONGREAL;
PROCEDURE @EXTERNAL tan   (x    : LONGREAL) : LONGREAL;
PROCEDURE @EXTERNAL pow   (x, y : LONGREAL) : LONGREAL;

END longmath.
